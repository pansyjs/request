{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2015", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "@pansy/request": [
        "src"
      ]
    }
  },
  "include": ["src", "docs", "tests"],
  "exclude": ["node_modules", "lib", "es", "dist", ".dumi"]
}
