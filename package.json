    "radash": "^12.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.13.2",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
